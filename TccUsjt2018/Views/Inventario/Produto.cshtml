@model IEnumerable<TccUsjt2018.ViewModels.ProdutoViewModel>
@{
    ViewBag.Title = "Produtos";
}
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">@ViewBag.Title</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nome</th>
                                    <th>Categoria</th>
                                    <th>Marca</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var produto in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(model => produto.CodigoProduto)</td>
                                        <td>@Html.DisplayFor(model => produto.NomeProduto)</td>
                                        <td>@Html.DisplayFor(model => produto.CategoriaProduto.NomeCategoria)</td>
                                        <td>@Html.DisplayFor(model => produto.MarcaProduto)</td>
                                        <td>@Html.ActionLink("", "")</td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->
