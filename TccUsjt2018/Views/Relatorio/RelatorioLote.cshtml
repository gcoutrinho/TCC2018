@model IEnumerable<TccUsjt2018.ViewModels.Relatório.RelatorioLoteViewModel>
@{
    ViewBag.Title = "RelatorioLote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Relatório de Lote</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Lote</th>
                                    <th>Produto</th>
                                    <th>Categoria</th>
                                    <th>Quantidade</th>
                                    <th>Validade</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(model => item.DescricaoLote)</td>
                                        <td>@Html.DisplayFor(model => item.NomeProduto)</td>
                                        <td>@Html.DisplayFor(model => item.NomeCategoria)</td>
                                        <td>@Html.DisplayFor(model => item.QuantidadeProduto)</td>
                                        <td>@Html.DisplayFor(model => item.ValidadeLote)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div><!-- .animated -->
</div><!-- .content -->

<script>

</script>
