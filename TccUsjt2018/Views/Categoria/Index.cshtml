                                            @*@Html.ActionLink("Editar", "Edit", new { codigoCategoria = categoria.CodigoCategoria }, new { @class = "btn btn-warning" })*@
                                            @*<button onclick="remover('@lote');" type="button" class="btn btn-danger">Excluir</button>*@
