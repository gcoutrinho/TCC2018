@model TccUsjt2018.ViewModels.ProdutoCategoria.CategoriaProdutoViewModel
@{
    ViewBag.Title = "Nova Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">@ViewBag.Title</strong>
                    </div>
                    <div class="card-body">
                        <!-- Credit Card -->
                        <div id="pay-invoice">
                            <div class="card-body">
                                @using (Html.BeginForm("Create", "Categoria"))
                                {
                                    <div class="form-group">
                                        @Html.LabelFor(X => X.NomeCategoria)
                                        @Html.TextBoxFor(x => x.NomeCategoria, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(X => X.DescricaoCategoria)
                                        @Html.TextBoxFor(x => x.DescricaoCategoria, new { @class = "form-control" })
                                    </div>                                    
                                    <br />
                                    <br />
                                    <div class="form-group" style="display:inline-block">
                                        <button type="submit" class="btn btn-primary" id="idCadastrar" value="">Cadastrar</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div> <!-- .card -->
            </div>
        </div>
    </div>
</div>

