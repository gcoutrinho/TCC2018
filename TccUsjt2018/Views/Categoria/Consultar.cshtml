@model TccUsjt2018.ViewModels.ProdutoCategoria.CategoriaProdutoViewModel

@{
    ViewBag.Title = "Consultar Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">@ViewBag.Title</strong>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-dark" role="alert">
                            Nome Categoria: @Model.CodigoCategoria
                        </div>
                        <div class="alert alert-dark" role="alert">
                            Descrição: @Model.DescricaoCategoria
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->