@model TccUsjt2018.ViewModels.Relatório.RelatorioProdutoViewModel
@{
    ViewBag.Title = "Relatório de Produto";
}

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Relatório de Produtos</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Produto</th>
                                    <th>Categoria</th>
                                    <th>Validade</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var produto in Model.Produtos)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(model => produto.NomeProduto)</td>
                                        <td>@Html.DisplayFor(model => produto.CategoriaProduto.NomeCategoria)</td>
                                        <td>@Html.DisplayFor(model => produto.ValidadeLote.ToString("MM/yyyy"))</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->

<script>

</script>