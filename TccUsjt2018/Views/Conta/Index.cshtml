@model IEnumerable<TccUsjt2018.ContaRegistrarViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">@ViewBag.Title</strong>
                    </div>
                    <div class="card-body">
                        @Html.ActionLink("Cadastrar", "Registrar", null, new { @class = "btn btn-primary" })
                        <br />
                        <br />
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Usuario</th>
                                    <th>Nome</th>
                                    <th>Email</th>                               
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var usuario in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(model => usuario.UserName)</td>
                                        <td>@Html.DisplayFor(model => usuario.NomeCompleto)</td>
                                        <td>@Html.DisplayFor(model => usuario.Email)</td>
                                        @*<td align="center"><button onclick="detalhes('@produto');" type="button" class="btn btn-success">Detalhes</button>*@
                                        <td>
                                            @*Html.ActionLink("Consultar", "Consultar", new { codigoProduto = usuario.NomeCompleto }, new { @class = "btn btn-success" })*@
                                            @*@Html.ActionLink("Editar", "Edit", new { codigoProduto = produto.CodigoProduto }, new { @class = "btn btn-warning" })*@
                                            @*<button onclick="remover('@produto');" type="button" class="btn btn-danger">Excluir</button>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->

