@model TccUsjt2018.ViewModels.Filtros.FiltrosViewModel
@{
    ViewBag.Title = "Relatório de Produtos";
}
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">@ViewBag.Title</strong>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("RelatorioProduto", "Relatorio"))
                        {
                            <div class="col-md-4 form-group form-group--float" style="display:inline-block ">
                                @Html.LabelFor(x => x.NomeProduto)
                                @Html.EditorFor(x => x.NomeProduto, new { @class = "form-control" })
                            </div>
                            <div class="col-md-4 form-group form-group--float" style="display:inline-block">
                                @Html.LabelFor(X => X.DataVencimento, new { @class = "control-label mb-1" })
                                @Html.EditorFor(x => x.DataVencimento, new { @class = "form-control" })
                            </div>
                            <div class="col-md-4 form-group form-group--float" style="display:inline-block">
                                @Html.LabelFor(model => model.SelectItemCategoriaId)
                                @Html.DropDownListFor(model => model.SelectItemCategoriaId, Model.Categorias)
                            </div>
                            <div class="col-md-4 form-group form-group--float" style="display:inline-block">
                                <button type="submit" class="btn btn-primary" id="idConsulta" value="">Consultar</button>
                            </div>

                        }

                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->
